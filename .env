# Twitter API Credentials
# Get these from https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# Google Gemini API
# Get this from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Connection
# Format: mongodb://username:password@host:port/database
# For local development: mongodb://localhost:27017/gemini-twitter-bot
MONGODB_URI=mongodb://localhost:27017/gemini-twitter-bot

# Bot Configuration
# Comma-separated list of topics to monitor
TOPICS=AI,artificial intelligence,machine learning,deep learning,neural networks

# Rate Limiting
# Maximum number of replies per hour to avoid spam
MAX_REPLIES_PER_HOUR=10

# Logging Level (optional)
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
